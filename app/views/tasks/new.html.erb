<% content_for :title, "New Task" %>
<section class="min-h-screen">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="max-w-2xl mx-auto">
      
      <!-- Header Section -->
      <div class="flex flex-col justify-center items-center mb-8 gap-8 animate-fadeInUp">
        <!-- Decorative elements -->
        <div class="absolute -top-4 -left-4 w-8 h-8 bg-gradient-to-r from-pink-300 to-purple-300 rounded-full opacity-60 animate-pulse"></div>
        <div class="absolute -bottom-4 -right-4 w-6 h-6 bg-gradient-to-r from-blue-300 to-indigo-300 rounded-full opacity-60 animate-pulse" style="animation-delay: 0.5s;"></div>
        
      </div>

      <!-- Form Container -->
      <div class="group bg-white/70 backdrop-blur-sm rounded-3xl p-8 sm:p-10 hover:bg-white/90 hover:shadow-2xl transition-all duration-300 ease-out transform hover:-translate-y-2 animate-fadeInUp animate-delay-200 border border-white/50 relative overflow-hidden">
        
        <!-- Cute gradient border effect -->
        <div class="absolute inset-0 bg-gradient-to-r from-pink-200 via-purple-200 to-indigo-200 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10"></div>
        <div class="absolute inset-[1px] bg-white rounded-3xl -z-10"></div>
        
        <!-- Magic sparkle decorations -->
        <div class="absolute top-6 right-6 w-6 h-6 bg-gradient-to-r from-pink-300 to-purple-300 rounded-full opacity-40 animate-pulse"></div>
        <div class="absolute bottom-8 left-8 w-4 h-4 bg-gradient-to-r from-purple-300 to-indigo-300 rounded-full opacity-40 animate-pulse" style="animation-delay: 1s;"></div>
        
        <div class="relative z-10">
          <!-- Form Header -->
          <div class="mb-8 text-center">
            <div class="text-center relative">
              <div class="relative mb-6">
                <!-- Cute floating elements around title -->
                <div class="absolute -top-6 -left-8 w-4 h-4 bg-pink-300 rounded-full animate-bounce opacity-60"></div>
                <div class="absolute -top-4 -right-12 w-3 h-3 bg-purple-300 rounded-full animate-bounce opacity-60" style="animation-delay: 0.2s;"></div>
                <div class="absolute -bottom-6 -left-10 w-2 h-2 bg-indigo-300 rounded-full animate-bounce opacity-60" style="animation-delay: 0.4s;"></div>
                
                <h1 class="text-4xl sm:text-5xl font-bold text-gray-800 mb-2">
                  New Task
                </h1>
                <div class="absolute -bottom-2 left-1/2 transform -translate-x-1/2 w-24 h-1 bg-gradient-to-r from-pink-300 to-purple-300 rounded-full"></div>
              </div>
            </div>
          </div>

          <!-- Form Content -->
          <div class="bg-gradient-to-r from-pink-50/50 via-purple-50/50 to-indigo-50/50 rounded-2xl p-3 border border-pink-100/50">
            <%= render "form", task: @task %>
          </div>

          <!-- Back Link -->
          <div class="mt-8 text-center">
            <%= link_to tasks_path, class: "group inline-flex items-center space-x-3 text-gray-800 rounded-full px-4 py-2 font-semibold transition-all duration-300 ease-out transform hover:scale-105 hover:shadow-xl relative overflow-hidden" do %>
              <span class="relative z-10 text-lg">Back Home</span>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Extra cute floating elements -->
      <div class="absolute top-20 right-10 w-3 h-3 bg-pink-300 rounded-full animate-bounce opacity-50" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-32 left-12 w-2 h-2 bg-purple-300 rounded-full animate-bounce opacity-50" style="animation-delay: 2.5s;"></div>
    </div>
  </div>
</section>