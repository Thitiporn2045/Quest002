<section class="min-h-screen">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col justify-center items-center mb-8 gap-10 sm:gap-20 animate-fadeInUp">
      <div class="flex items-center justify-center space-x-4">
        <div>
          <h1 class="font-bold text-center text-4xl sm:text-6xl bg-gradient-to-r from-gray-900 via-indigo-900 to-purple-900 bg-clip-text text-transparent">
            THITIPORN THAIMJAN
          </h1>
          <p class="text-gray-600 text-sm sm:text-base mt-1 flex justify-center">Stay organized, stay productive</p>
        </div>
      </div>
      <div class="flex flex-col items-center animate-fade-in-up">
        <div class="size-[10rem] sm:size-[20rem] mb-4 overflow-hidden rounded-full ring-2 ring-indigo-100">
          <%= image_tag "GIFT2.JPG", alt: "profile image", class: "w-full h-full object-cover" %>
        </div>
        <%# <%= link_to "Go to Brags", brags_path, class: "text-xl text-gray-600 italic" %>
      </div>
      <!-- Task Stats -->
      <div class="flex flex-col lg:flex-row lg:justify-between items-center gap-4 w-full">
        <h1 class="font-bold text-2xl sm:text-4xl bg-gradient-to-r from-gray-900 via-indigo-900 to-purple-900 bg-clip-text text-transparent">
          Gift's Tasks
        </h1>
        <%= link_to new_task_path, class: "group w-full lg:w-40 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white rounded-4xl px-6 py-3 font-semibold transition-all duration-300 ease-out transform hover:scale-105 hover:shadow-lg flex items-center space-x-2 justify-center" do %>
          <svg class="w-5 h-5 group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          <span>New Task</span>
        <% end %>
      </div>
    </div>

    <!-- Tasks Section -->
    <div id="tasks" class="animate-fadeInUp animate-delay-200">
      <% if @tasks.any? %>
        <% @tasks_to_display = @tasks.respond_to?(:order) ? @tasks.order(created_at: :desc) : @tasks.sort_by(&:created_at).reverse %>
        
        <!-- Tasks Grid -->
        <div class="space-y-4">
          <% @tasks_to_display.each_with_index do |task, index| %>
            <div id="task_container_<%= task.id %>" 
                data-task-id="<%= task.id %>" 
                data-controller="task" 
                class="group backdrop-blur-sm p-2 hover:shadow-2xs hover:bg-white/80 transition-all duration-300 ease-out transform hover:-translate-y-1 animate-fadeInUp" 
                style="animation-delay:<%= 0.1 + (index * 0.05) %>s">
              
              <div class="flex justify-between gap-4">
                <div class="flex space-x-4 flex-1 min-w-0">
                  <div class="relative mt-1">
                    <input type="checkbox"
                          id="task_<%= task.id %>"
                          <%= "checked" if task.completed? %>
                          data-action="change->task#toggle"
                          data-task-id="<%= task.id %>"
                          data-turbo="false"
                          class="peer absolute opacity-0 w-6 h-6 cursor-pointer" />
                    <label for="task_<%= task.id %>" class=" w-6 h-6 border-2 border-gray-300 rounded-lg cursor-pointer peer-checked:bg-gradient-to-r peer-checked:from-indigo-500 peer-checked:to-purple-600 peer-checked:border-transparent transition-all duration-200 flex items-center justify-center group-hover:border-indigo-300">
                      <svg class="w-4 h-4 text-white opacity-0 peer-checked:opacity-100 transition-opacity duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                      </svg>
                    </label>
                  </div>

                  <!-- Task Content -->
                  <div class="flex-1 min-w-0">
                    <%= link_to task, class: "block group-hover:text-indigo-600 transition-colors duration-200" do %>
                      <p
                        data-task-target="title"
                        data-task-id="<%= task.id %>"
                        class="transition-all duration-300 <%= 'line-through text-gray-500' if task.completed? %> text-gray-900 font-medium text-base sm:text-lg truncate">
                        <%= task.title %>
                      </p>
                      <% if task.respond_to?(:description) && task.description.present? %>
                        <p class="text-gray-600 text-sm mt-1 truncate"><%= task.description %></p>
                      <% end %>
                      <div class="text-xs text-gray-500 mt-2 flex items-center space-x-4">
                        <span class="flex items-center space-x-1">
                          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          <span><%= task.created_at.strftime("%b %d") %></span>
                        </span>
                        <% if task.completed? %>
                          <span
                            data-task-target="status"
                            data-task-id="<%= task.id %>"
                            class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 transition-colors duration-300">
                            âœ“ Completed
                          </span>
                        <% else %>
                          <span
                            data-task-target="status"
                            data-task-id="<%= task.id %>"
                            class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 transition-colors duration-300">
                            ðŸ“‹ Pending
                          </span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>

                <!-- Actions -->
                <div class="flex space-x-2">
                  <%# <%= link_to edit_task_path(task), class: "p-2 text-gray-400 hover:text-indigo-600 hover:bg-indigo-50 rounded-lg transition-all duration-200" do %>
                    <%# <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg> %>
                  <%# <% end %>
                  
                  <%= button_to task, 
                      method: :delete, 
                      class: "p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg",
                      data: { 
                        turbo_confirm: "Are you sure you want to remove this task?",
                        turbo_method: :delete
                      } do %>
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="flex flex-col items-center justify-center py-20 animate-fadeInUp animate-delay-300">
          <div class="w-32 h-32 bg-gradient-to-br from-indigo-100 to-purple-100 rounded-full flex items-center justify-center mb-8 shadow-lg">
            <svg class="w-16 h-16 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">No tasks yet!</h3>
          <p class="text-gray-600 text-center mb-8 max-w-md">
            Ready to boost your productivity? Create your first task and start organizing your life.
          </p>
          <%= link_to new_task_path, class: "group bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white rounded-2xl px-8 py-4 font-semibold transition-all duration-300 ease-out transform hover:scale-105 hover:shadow-lg flex items-center space-x-3" do %>
            <svg class="w-5 h-5 group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            <span>Create your first task</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
